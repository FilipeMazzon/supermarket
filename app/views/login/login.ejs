<!doctype html>
<html>
<head>
    <meta charset="UTF-8">

    <title>Walmart Login</title>

    <!-- JQuery -->
    <script src="js/jquery-2.2.1.js"></script>
    <script type="text/javascript" src="js/materialize.min.js"></script>
    <script src="js/sidenav.js"></script>
    <script src="js/updateText.js"></script>

    <!-- bootstrap - link cdn -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"
          integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <!-- carregando icones -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- incluindo css -->
    <link href="css/style.css" rel="stylesheet">
    <!-- materialize -->
    <link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection"/>
    <!-- favicon -->
    <link rel="shortcut icon" href="images/walmart.ico"/>
</head>


<body>
<nav class="navbar navbar-default navbar-static-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <img src="images/Logo.png"/>
        </div>


    </div>
</nav>
<% if(validacao.length > 0){ %>

<div class="row">
    <div class="col-md-12">
        <div class="alert alert-danger">
            <strong>Atenção!</strong>
            <ul>

                <% for(var i = 0; i < validacao.length ;i++) { %>

                <li><%= validacao[i].msg %></li>
                <% } %>
            </ul>
        </div>
    </div>
</div>
<% } %>
<div class="container">
    <form action="/autentificar" method="post">
        <div class="jumbotron" id="formulario">

            <div class="txt">
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">account_circle</i>
                        <input id="user" name="user" type="text" value="<%= login.user %>" class="validate">
                        <label class="active" for="titulo">User</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">vpn_key</i>
                        <input id="password" name="password" type="password" value="<%= login.password %>"
                               class="validate">
                        <label class="active" for="pwd">password</label>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-default center" id="Login">Login</button>
        </div>
    </form>
</div>
</body>
</html>
