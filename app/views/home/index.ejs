<!DOCTYPE HTML>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">

    <title>Index</title>

    <script src="js/jquery-2.2.1.js"></script>
    <script type="text/javascript" src="js/materialize.min.js"></script>
    <script src="js/sidenav.js"></script>
    <script src="js/updateText.js"></script>

    <!-- bootstrap - link cdn -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"
          integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <!-- carregando icones -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- incluindo css -->
    <link href="css/style.css" rel="stylesheet">
    <!-- materialize -->
    <link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection"/>
    <!-- favicon -->
    <link rel="shortcut icon" href="images/walmart.ico"/>
</head>

<body>

<!-- SideNav -->
<%- include ../sidebar.ejs %>

<% if(item.length > 0){ %>
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="item_wrapper">
                <span class="item_id"><%= item[0].id %></span>
                <a href="item?id=<%= item[0].id %>" class="item_nome"><%= item[0].nome %></a>
                <span class="item_data"><%= item[0].data %></span>
                <span class="item_preco"> R$ <%= item[0].preco %> </span>
                <br/>
                <p class="item_descricao">
                    <%= item[0].descricao %>
                </p>
            </div>
        </div>
        <% if(item.length > 1){ %>
        <div class="col-md-4">
            <div class="item_wrapper">
                <span class="item_id"><%= item[1].id %></span>
                <a href="item?id=<%= item[1].id %>" class="item_nome"><%= item[1].nome %></a>
                <span class="item_data"><%= item[1].data %></span>
                <span class="item_preco"> R$ <%= item[1].preco %> </span>
                <br/>
                <p class="item_descricao">
                    <%= item[1].descricao %>
                </p>
            </div>
        </div>
    </div>
    <% } %>
    <% } %>
    <div class="row">
        <% for(var i = 2;i < item.length ; i++){ %>
        <div class="col-md-4">
            <div class="item_wrapper">
                <span class="item_id"><%= item[i].id %></span>
                <a href="item?id=<%= item[i].id %>" class="item_nome"><%= item[i].nome %></a>
                <span class="item_data"><%= item[i].data %></span>
                <span class="item_preco"> R$ <%= item[i].preco %> </span>
                <br/>
                <p class="item_descricao">
                    <%= item[i].descricao %>
                </p>
            </div>
        </div>
        <% } %>
    </div>

    <div class="row ver_mais">
        <a class="waves-effect waves-light btn-large blue" href="/listar_itens">Ver Mais</a>
    </div>

</div>

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"
        integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS"
        crossorigin="anonymous"></script>

</body>
</html>
